<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="font-bold text-4xl">Messages</h1>
    <div class=" flex items-center">
      <div><%= link_to 'New message', new_tag_message_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %></div>
      <div class="ml-2"><%= link_to 'Back to tags', tags_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %></div>
    </div>
  </div>

  <div id="messages" class="min-w-full">
    <%= render @messages %>
  </div>
</div>
