<div id="<%= dom_id message %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Author name:</strong>
    <%= message.author_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= MessageTranslator.encode(message.content) %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tag:</strong>
    <%= message.tag.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this message", tag_message_path(tag_name: message.tag.name, id: message), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this message', edit_tag_message_path(tag_name: message.tag.name, id: message), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
